<div class="container show-div">
  <div class="card" style="width: 100px;">
    <img
      src="<%= pokeData.sprites.front_default  %> "
      alt="pokecard"
      class="card-img-top"
    />
    <div class="body">
      <h3>Types:</h3>
      <% pokeData.types.forEach(type => { %>
      <p><%= type.type.name %></p>
      <% }) %>
    </div>
    <ul class="list-group list-group-flush">
      <% pokeData.stats.forEach(stat => { %>
      <li class="list-group-item">
        <%= stat.stat.name %>: <%= stat.base_stat %>
      </li>
      <% }) %>
    </ul>
    <div class="card-body">
      <a href="/" class="card-link btn btn-primary">Back to Home</a>
      <a href="/pokemon" class="card-link btn btn-primary">Back to favorites</a>
    </div>
  </div>
</div>
